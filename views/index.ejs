<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
	<title>Purchase Tracker</title>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@800&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="/styles.css" />
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#0f172a">
</head>
<body>
	<div class="container">
		<div style="display:flex; justify-content:flex-end; margin: 8px 0; gap:8px; align-items:center; position:relative;">
			<% if (user) { %>
				<button id="burger" class="icon-button" aria-haspopup="menu" aria-expanded="false" title="<%= t('app.menu.menu') %>">☰</button>
				<div id="menu" class="menu hidden" role="menu" aria-labelledby="burger" aria-hidden="true" inert>
					<a class="menu-item" href="/settings" role="menuitem"><%= t('app.menu.settings') %></a>
					<a class="menu-item" href="/trash" role="menuitem"><%= (typeof t === 'function' ? t('trash.show_trash') : 'Show trash') %></a>
					<form action="/sessionLogout" method="post" style="display:block" role="none">
						<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						<button class="menu-item" type="submit" role="menuitem"><%= t('app.menu.logout') %></button>
					</form>
				</div>
			<% } else { %>
				<!-- Keep login accessible but not as a bright button -->
				<a class="link subtle" href="/login"><%= t('app.menu.login') %></a>
			<% } %>
		</div>

		<div class="card">
			<div class="title">
				<% if (isCurrentWeek) { %>
					<%= t('index.week_of_so_far', { range: weekRangeHuman }) %>
				<% } else { %>
					<%= t('index.week_of_only', { range: weekRangeHuman }) %>
				<% } %>
			</div>
			<div class="amount" style="font-size:28px; margin: 8px 0 16px;">
				<%= weeklyUsedFormatted %>
			</div>
			<div class="weekly-progress" aria-label="Weekly spend progress">
				<span class="icons">
					<% for (let i = 0; i < weeklyIcons.bigIcons; i++) { %>
						<span class="icon big" title="Big purchase">🌚</span>
					<% } %>
					<% for (let i = 0; i < weeklyIcons.smallIcons; i++) { %>
						<span class="icon small" title="Small purchase">🌝</span>
					<% } %>
					<% for (let i = 0; i < weeklyIcons.emptyIcons; i++) { %>
						<span class="icon empty" aria-hidden="true">○</span>
					<% } %>
					<% for (let i = 0; i < firstRowDevils; i++) { %>
						<span class="icon devil" title="Overspend">👹</span>
					<% } %>
				</span>
			</div>
			<% if (weeklyDevilRows && weeklyDevilRows.length) { %>
				<div class="weekly-overspend">
					<% weeklyDevilRows.forEach(function(row){ %>
						<div class="weekly-progress" aria-label="Overspend row">
							<span class="icons">
								<% for (let i = 0; i < row.devils; i++) { %>
									<span class="icon devil" title="Overspend">👹</span>
								<% } %>
							</span>
						</div>
					<% }); %>
				</div>
			<% } %>
			<div class="subtle" style="margin-top:12px">
				<%= weeklyStatusLine %>
			</div>
			<div class="actions" style="margin-top:16px">
				<a class="btn secondary" id="view-daily-details" href="/details"><%= t('index.view_daily_details') %></a>
			</div>
		</div>
		<div class="below-actions center">
			<a class="btn" href="/spend"><%= t('index.spend') %></a>
		</div>
	</div>
	<script src="/main.js"></script>
</body>
</html>
