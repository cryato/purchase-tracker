<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<title>Edit Purchase</title>
	<link rel="stylesheet" href="/styles.css" />
</head>
<body>
	<div class="container">
		<div class="card">
			<h1 class="title">Edit purchase</h1>
			<form action="/edit/<%= purchase.id %>" method="post">
				<div>
					<label for="amount">Amount (<%= currencyCode %>)</label>
					<input id="amount" name="amount" type="number" step="0.01" inputmode="decimal" value="<%= purchase.amount %>" required />
				</div>
				<div>
					<label for="date">Date</label>
					<input id="date" name="date" type="date" value="<%= purchase.date %>" required />
				</div>
				<div>
					<label for="description">Description (optional)</label>
					<textarea id="description" name="description" rows="2"><%= purchase.description %></textarea>
				</div>
				<div class="actions">
					<a class="btn secondary" href="/details">Cancel</a>
					<button class="btn" type="submit">Save</button>
				</div>
			</form>
		</div>
	</div>
</body>
</html>

